{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022"],
    "module": "ES2022",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "types": ["@cloudflare/workers-types"],
    "paths": {
      "../../avro-wasm/*": ["../avro-wasm/*"]
    }
  },
  "include": ["src/**/*", "../avro-wasm/**/*"],
  "exclude": ["node_modules", "dist"]
}
