---
import Layout from "../../layouts/Layout.astro";
import AlertBox from "../../components/AlertBox.astro";
import { createSupabaseServerClient } from "@/utility/supabaseServer";

const cookies = Astro.cookies;
const runtimeEnv = (Astro.locals as any)?.runtime?.env || {};
const supabase = createSupabaseServerClient(cookies, runtimeEnv);

// Get member_id_hash from query params
const memberIdHash = Astro.url.searchParams.get("hash");

let hints: any = null;
let error: string | null = null;

if (!memberIdHash) {
  error = "Missing member_id_hash parameter";
} else {
  // Fetch safe account hints
  const { data, error: rpcError } = await supabase.rpc(
    "rpc_get_member_conflict_hints",
    {
      member_id_hash: memberIdHash,
    }
  );

  if (rpcError) {
    console.error("Failed to fetch conflict hints:", rpcError);
    error = "Failed to load account information";
  } else if (data?.success) {
    hints = data.hints;
  } else {
    error = data?.error || "Account not found";
  }
}
---

<Layout title="Account Conflict - FUSOU">
  <div class="min-h-screen flex items-center justify-center px-4 py-8">
    <div class="w-full max-w-2xl">
      <div class="bg-base-100 rounded-md p-6">
        <div class="flex items-center gap-2 mb-6">
          <span class="flex-1 flex justify-end">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              class="h-8 w-8 text-warning"
              fill="none"
              viewBox="0 0 24 24"
              stroke="currentColor"
            >
              <path
                stroke-linecap="round"
                stroke-linejoin="round"
                stroke-width="2"
                d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-3L13.732 4c-.77-1.333-2.694-1.333-3.464 0L3.34 16c-.77 1.333.192 3 1.732 3z"
              ></path>
            </svg>
          </span>
          <span class="text-center text-2xl font-semibold"
            >Account Conflict</span
          >
          <span class="flex-1"><div class="h-8 w-8"></div></span>
        </div>

        {
          error ? (
            <div class="mt-6">
              <AlertBox type="error" title="Error">
                <p>{error}</p>
              </AlertBox>
            </div>
          ) : (
            hints && (
              <>
                <div class="mt-6 space-y-4">
                  <AlertBox type="warning" title="Account Conflict">
                    <p>
                      This game account is already linked to another FUSOU
                      account.
                    </p>
                  </AlertBox>

                  <div class="bg-base-200 rounded-lg p-4">
                    <h3 class="font-semibold mb-3 text-sm">Existing Account</h3>
                    <div class="space-y-2 text-sm">
                      <div class="flex items-center gap-2">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4 text-primary"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"
                          />
                        </svg>
                        <span class="opacity-70">Email:</span>
                        <span class="font-mono text-xs">
                          {hints.masked_email}
                        </span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4 text-primary"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"
                          />
                        </svg>
                        <span class="opacity-70">Last Sign In:</span>
                        <span>{hints.last_sign_in_date || "Unknown"}</span>
                      </div>
                      <div class="flex items-center gap-2">
                        <svg
                          xmlns="http://www.w3.org/2000/svg"
                          class="h-4 w-4 text-primary"
                          fill="none"
                          viewBox="0 0 24 24"
                          stroke="currentColor"
                        >
                          <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            stroke-width="2"
                            d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"
                          />
                        </svg>
                        <span class="opacity-70">Account Created:</span>
                        <span>{hints.account_created_date || "Unknown"}</span>
                      </div>
                    </div>
                    <div class="mt-3 text-xs opacity-60 italic">
                      This information is provided to help you identify your
                      account. For security reasons, full details are not
                      displayed.
                    </div>
                  </div>

                  <div class="divider">Resolution Options</div>

                  <div class="space-y-4">
                    <div class="card bg-base-200 border-2 border-primary">
                      <div class="card-body p-4">
                        <h3 class="card-title text-sm">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5 text-primary"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
                            />
                          </svg>
                          Switch to Original Account
                        </h3>
                        <p class="text-xs opacity-80">
                          Sign out from the current account and sign in with the
                          account shown above.
                        </p>
                        <div class="card-actions justify-end mt-3">
                          <a
                            href="/auth/local/signin"
                            class="btn btn-primary btn-wide btn-sm"
                          >
                            Switch Account
                          </a>
                        </div>
                      </div>
                    </div>

                    <div class="card bg-base-200 border-2 border-dotted border-base-300">
                      <div class="card-body p-4">
                        <h3 class="card-title text-sm">
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            class="h-5 w-5"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke="currentColor"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              stroke-width="2"
                              d="M8 7h12m0 0l-4-4m4 4l-4 4m0 6H4m0 0l4 4m-4-4l4-4"
                            />
                          </svg>
                          Transfer Ownership
                        </h3>
                        <p class="text-xs opacity-80">
                          Move your game data from the old account to your
                          current account using a transfer code.
                        </p>
                        <div class="mt-4 mb-4">
                          <ol class="list-decimal pl-5 space-y-2 text-sm font-mono">
                            <li>Sign in with the OLD account</li>
                            <li>Generate a transfer code</li>
                            <li>Return here and enter the code</li>
                            <li>Complete the transfer</li>
                          </ol>
                        </div>
                        <div class="card-actions justify-end">
                          <button
                            class="btn btn-outline btn-wide btn-sm"
                            onclick="alert('Transfer feature coming soon. Please contact support for assistance.')"
                          >
                            Learn More About Transfer
                          </button>
                        </div>
                      </div>
                    </div>

                    <div class="alert alert-info bg-base-200 border border-base-300 text-sm text-base-content/80 flex items-start gap-3">
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        fill="none"
                        viewBox="0 0 24 24"
                        class="w-6 h-6 shrink-0 text-info stroke-current"
                      >
                        <path
                          stroke-linecap="round"
                          stroke-linejoin="round"
                          stroke-width="2"
                          d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"
                        />
                      </svg>
                      <div class="flex-1">
                        <div class="font-semibold text-base-content mb-3">
                          Need Help?
                        </div>
                        <div class="flex gap-4 items-center justify-between">
                          <p class="flex-1">
                            If you cannot access the old account or need
                            additional assistance, please contact our support
                            team.
                          </p>
                        </div>
                        <div class="card-actions justify-end mt-3">
                          <a
                            href="https://github.com/tsukasa-u/FUSOU/issues"
                            target="_blank"
                            class="btn btn-primary btn-wide btn-sm"
                          >
                            Contact Support
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </>
            )
          )
        }
      </div>

      <div class="my-6 text-center text-sm text-base-content/70">
        Your game account can only be linked to one FUSOU account. Switch to the
        correct account or transfer ownership.
      </div>
    </div>
  </div>
</Layout>
