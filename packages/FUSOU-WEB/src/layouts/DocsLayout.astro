---
import "../assets/app.css";
import "../styles/global.css";
import Navigation from "../components/Navigation.astro";
import LeftMenu from "../components/docs/LeftMenu.astro";
import RightMenu from "../components/docs/RightMenu.astro";
import Breadcrumb from "../components/docs/Breadcrumb.astro";
import DocumentInfo from "../components/docs/DocumentInfo.astro";
import { getEntry } from "astro:content";

const { entry, Content, headings } = Astro.props;
const authors = await Promise.all(
  entry.data.contributors.map(async (contributor) => {
    return await getEntry("authors", contributor);
  })
);
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{entry.data.title}</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=report" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=info" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=feedback" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=warning" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=lightbulb" />
  </head>
  <body>
    <Navigation />
    <div class="h-16"></div>
    <div class="grid grid-cols-10 gap-x-8 pt-4">
      <aside
        class="hidden md:block md:col-span-3 xl:col-span-2 pr-4 pl-8 justify-self-end"
      >
        <LeftMenu />
      </aside>

      <main class="py-4 px-8 col-span-10 xl:col-span-6 md:col-span-7 mr-auto">
        <Breadcrumb entry={entry} />
        <div class="markdown"><Content /></div>
        <br />
        <DocumentInfo lastUpdated={entry.data.date} contributors={authors} />
        <br />
      </main>

      <aside class="hidden lg:block col-span-2 pl-4 pr-8 justify-self-start">
        <RightMenu headings={headings} />
      </aside>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    /* scrollbar-gutter: stable; */
    scrollbar-width: none;
    scroll-padding-top: 100px !important;
  }
</style>