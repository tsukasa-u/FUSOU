---
import "@/assets/app.css";
import "@/styles/global.css";
import Navigation from "@/components/Navigation.astro";
import LeftMenu from "@/components/docs/LeftMenu.astro";
import RightMenu from "@/components/docs/RightMenu.astro";
import Breadcrumb from "@/components/docs/Breadcrumb.astro";
import DocumentInfo from "@/components/docs/DocumentInfo.astro";
import { getEntry } from "astro:content";

const { entry, Content, headings } = Astro.props;
const authors = await Promise.all(
  entry.data.contributors.map(async (contributor) => {
    return await getEntry("authors", contributor);
  })
);
---

<html>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <title>{entry.data.title}</title>
    <meta name="description" content={entry.data.description} />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=report"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=info"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=feedback"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=warning"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=lightbulb"
    />
    {
      import.meta.env.PROD && (
        <!-- Cloudflare Web Analytics -->
        <script
          defer
          src="https://static.cloudflareinsights.com/beacon.min.js"
          data-cf-beacon={`{"token": "${import.meta.env.PUBLIC_CLOUDFLARE_ANALYTICS_TOKEN}"}`}
        />
        <!-- End Cloudflare Web Analytics -->
      )
    }
  </head>
  <body>
    <Navigation />
    <div class="h-16"></div>
    <div class="flex">
      <div class="flex-1 min-w-0"></div>
      <div class="grid grid-cols-24 gap-x-4 sm:gap-x-8 pt-4 max-w-[1600px] w-full px-4 sm:px-8">
        <aside
          class="hidden md:block md:col-span-6 md:col-start-2 xl:col-span-5 xl:col-start-2 pr-0 justify-self-end sticky top-20 self-start pt-8 w-full max-w-[280px]"
        >
          <LeftMenu />
        </aside>

        <main class="py-4 px-4 sm:px-8 md:px-12 col-span-24 md:col-span-16 xl:col-span-12">
          <Breadcrumb entry={entry} />
          <div class="markdown"><Content /></div>
          <br />
          <DocumentInfo lastUpdated={entry.data.date} contributors={authors} />
          <br />
        </main>

        <aside class="hidden xl:block xl:col-span-5 pl-0 justify-self-start sticky top-20 self-start pt-8">
          <RightMenu headings={headings} />
        </aside>
      </div>
      <div class="flex-1 min-w-0"></div>
    </div>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    /* scrollbar-gutter: stable; */
    scrollbar-width: none;
    scroll-padding-top: 100px !important;
  }
</style>
