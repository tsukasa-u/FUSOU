<div class="bg-base-200 min-h-screen flex items-center justify-center p-6">
    <div class="w-full max-w-md">
        <div class="bg-base-100 rounded-md p-6">
            <h1 class="text-2xl font-semibold text-center mb-1">Sign in</h1>
            <p class="text-center text-sm text-base-content/70 mb-4">Sign in to your account</p>

            <button id="login_button" class="btn w-full mb-3 btn-ghost text-base-content/90 flex items-center justify-center gap-2 border border-base-300 rounded-sm">
                <svg aria-label="Google logo" width="16" height="16" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512"><g><path d="m0 0H512V512H0" fill="#fff"></path><path fill="#34a853" d="M153 292c30 82 118 95 171 60h62v48A192 192 0 0190 341"></path><path fill="#4285f4" d="m386 400a140 175 0 0053-179H260v74h102q-7 37-38 57"></path><path fill="#fbbc02" d="m90 341a208 200 0 010-171l63 49q-12 37 0 73"></path><path fill="#ea4335" d="m153 219c22-69 116-109 179-50l55-54c-78-75-230-72-297 55"></path></g></svg>
                <span>Sign in with Google</span>
            </button>

            <div class="divider">OR</div>

            <div class="flex items-center justify-between mt-2">
                <div class="text-sm text-base-content/70">You can use the app without signing in.</div>
                <a href="/" id="skip_signin" class="text-sm link">Skip Sign In</a>
            </div>

            <div class="mt-5">
                <div class="text-xs font-medium mb-1 text-base-content/80">About signing in with Google</div>
                <div class="w-full py-3 px-3 text-sm text-base-content/80 bg-base-200 rounded-sm border border-base-300">
                    Sign in with a Google account to save battle data to Google Drive. If you do not sign in, data will only be stored locally and cannot be saved to the cloud.
                </div>
            </div>
        </div>
    </div>
</div>

<script is:inline type="module">
    import { supabase } from '../utility/supabase.ts';

    const handleLogin = async () => {
        await supabase.auth.signInWithOAuth({
            provider: 'google',
            options: {
                scopes: 'https://www.googleapis.com/auth/drive.file',
                redirectTo: `${window.location.origin}/auth_callback`,
                queryParams: {
                    prompt: 'consent',
                    access_type: 'offline',
                },
            },
        });
    };
</script>