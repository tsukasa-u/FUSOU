{
  "name": "shared-ui",
  "private": true,
  "version": "0.1.2",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "update-version-dev": "node scripts/update-patch-tag.js",
    "update-version-release": "node scripts/update-patch.js",
    "clean.dist": "rm -rf ./dist",
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "bundle:types": "rollup -c rollup.config.mjs",
    "build": "pnpm clean.dist && pnpm build:js && pnpm build:types && pnpm bundle:types && cem analyze --litelement",
    "build.dev": "pnpm update-version-dev && pnpm build",
    "build.release": "pnpm update-version-release && pnpm build",
    "build.rollup": "rollup -c",
    "build.tsc": "tsc --build --verbose",
    "build.tsc:watch": "tsc --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "format": "prettier --check ./src/**/*.{js,ts}",
    "format:fix": "prettier --write ./src/**/*.{js,ts}",
    "lint": "eslint **/*.{js,ts}",
    "lint:fix": "eslint --fix ./src/**/*.{js,ts}"
  },
  "dependencies": {
    "lit": "^3.3.1",
    "lit-html": "^3.3.1"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@custom-elements-manifest/analyzer": "^0.10.10",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@storybook/addon-a11y": "9.0.14",
    "@storybook/addon-docs": "9.0.14",
    "@storybook/addon-themes": "9.0.14",
    "@storybook/addon-vitest": "9.0.14",
    "@storybook/web-components-vite": "9.0.14",
    "@tailwindcss/vite": "^4.1.17",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "daisyui": "^5.5.5",
    "eslint": "^9.39.1",
    "eslint-plugin-lit": "^2.1.1",
    "eslint-plugin-wc": "^3.0.2",
    "playwright": "^1.57.0",
    "rollup": "^4.53.3",
    "rollup-plugin-dts": "^6.3.0",
    "rollup-plugin-minify-template-literals": "^1.1.7",
    "rollup-plugin-summary": "^3.0.1",
    "storybook": "9.1.17",
    "tailwindcss": "^4.1.17",
    "typescript": "~5.8.3",
    "typescript-eslint": "^8.48.0",
    "uuid": "^11.1.0",
    "vite": "^6.4.1",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
