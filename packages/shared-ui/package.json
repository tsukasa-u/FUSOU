{
  "name": "shared-ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "scripts": {
    "clean.dist": "rm -r ./dist",
    "build:js": "vite build",
    "build:types": "tsc --emitDeclarationOnly",
    "bundle:types": "rollup -c rollup.config.mjs",
    "build": "npm run clean.dist && npm run build:js && npm run build:types && npm run bundle:types && cem analyze --litelement",
    "build.rollup": "rollup -c",
    "build.tsc": "tsc --build --verbose",
    "build.tsc:watch": "tsc --watch",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "daisyui": "^5.0.46",
    "lit": "^3.3.1",
    "lit-html": "^3.3.1",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@chromatic-com/storybook": "4.0.1",
    "@custom-elements-manifest/analyzer": "^0.10.4",
    "@rollup/plugin-alias": "^5.1.1",
    "@rollup/plugin-typescript": "^12.1.4",
    "@storybook/addon-a11y": "9.0.14",
    "@storybook/addon-docs": "9.0.14",
    "@storybook/addon-themes": "9.0.14",
    "@storybook/addon-vitest": "9.0.14",
    "@storybook/web-components-vite": "9.0.14",
    "@vitest/browser": "^3.2.4",
    "@vitest/coverage-v8": "^3.2.4",
    "playwright": "^1.54.1",
    "rollup": "^4.45.1",
    "rollup-plugin-dts": "^6.2.1",
    "storybook": "9.0.14",
    "typescript": "~5.8.3",
    "vite": "^7.0.4",
    "vitest": "^3.2.4"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  }
}
